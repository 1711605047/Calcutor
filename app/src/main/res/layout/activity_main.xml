<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timg"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_main_input"
        android:layout_width="410dp"
        android:layout_height="184dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_main_7"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_main_input" />

    <Button
        android:id="@+id/btn_main_8"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_7"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_7" />

    <Button
        android:id="@+id/btn_main_9"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_8"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_add"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_8" />

    <Button
        android:id="@+id/btn_main_add"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_9" />

    <Button
        android:id="@+id/btn_main_4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_7" />

    <Button
        android:id="@+id/btn_main_5"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_4"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_4" />

    <Button
        android:id="@+id/btn_main_6"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_5"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_sub"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_5" />

    <Button
        android:id="@+id/btn_main_sub"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_6" />

    <Button
        android:id="@+id/btn_main_1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_4" />

    <Button
        android:id="@+id/btn_main_2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_1"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_1" />

    <Button
        android:id="@+id/btn_main_3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_2"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_mul"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_2" />

    <Button
        android:id="@+id/btn_main_mul"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_3" />

    <Button
        android:id="@+id/btn_main_eq"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_1" />

    <Button
        android:id="@+id/btn_main_0"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_eq"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_pt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_eq" />

    <Button
        android:id="@+id/btn_main_pt"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="."
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_0"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_div"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_0" />

    <Button
        android:id="@+id/btn_main_clr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="C"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_del"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_eq" />

    <Button
        android:id="@+id/btn_main_del"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DEL"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_clr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_clr" />

    <Button
        android:id="@+id/btn_main_div"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="รท"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_main_pt" />

</android.support.constraint.ConstraintLayout>